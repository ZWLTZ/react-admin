ab-center()
    position: absolute
    left: 0
    top: 0
    right 0
    bottom: 0
    margin: auto

.App-todo
    width: 10rem
    margin: 0 auto

.todo-wrap
    padding: .6rem

    h3
        margin: 0
        text-align: center
        font-size: .4rem
        font-style: italic

        color: #38B9B9
        text-transform: uppercase

    // add
    .todo-add
        margin-top: .26rem

        input
            display: block
            width: 100%
            height .8rem
            line-height: .8rem

            padding: 0 .4rem
            border: 1px solid #999999

            font-size: .3rem

    // list
    .todo-list
        margin-top: .4rem

        .list-box
            margin-top: .3rem
            border-top: 1px dashed #f0f0f0

        li
            position relative
            padding: .2rem 0
            border-bottom: 1px dashed #f0f0f0
            cursor pointer

            input.is-hide,.list-title
                display: inline-block
                vertical-align: middle

            input.is-hide
                position relative
                text-align: center
                width: .6rem
                height: .6rem

                border: none

                &:before
                    display table
                    width 100%
                    height 100%
                    background-color #ffffff

                    content: "✔"
                    font-size: .4rem
                    color: rgb(240, 240, 240)
                    text-shadow: rgb(191, 191, 191) 0px -1px 0px

                    ab-center()

                    cursor pointer
                    top 20%

                    transition: all .2s

                &[type=checkbox]:checked
                    &:before
                        color: #38B9B9
                        text-shadow: 0 1px 0 #669991

                    &+span
                        color #e4393c
                        text-decoration line-through

            .list-title
                font-size: .28rem

            // 刪除按鈕
            .delete-btn
                display: none
                width: .5rem
                height: .5rem
                line-height: .5rem
                font-size: .4rem

                color: #e4393c
                text-align: center

                position: absolute
                top: 25%
                right .2rem

                transition: all .2s

                &:hover
                    transform: scale(1.1)
                    text-shadow: 0 0 1px #000, 0 0 10px rgba(199, 107, 107, 0.8)

            &:hover
                .delete-btn
                    display: block

        // 總數狀態
        .counts-statue
            span 
                font-size: .25rem
                color: #e4393c

            .finished-count
                margin-left: .8rem