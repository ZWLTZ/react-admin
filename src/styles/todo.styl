body
    background #eaeaea url('../image/bg.png')

#app
    padding-top 1rem

.App-todo
    background-color #ffffff
    box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.2), 0 25px 50px 0 rgba(0, 0, 0, 0.15)

ab-center()
    position: absolute
    left: 0
    top: 0
    right 0
    bottom: 0
    margin: auto

.App-todo
    width: 10rem
    margin: 0 auto

.icon-tips
    text-align: center
    color: #999999

.todo-wrap
    padding: .6rem .6rem .3rem .6rem

    h3
        margin: 0
        text-align: center
        font-size: .4rem
        font-style: italic
        text-shadow: -1px -1px rgba(0, 0, 0, 0.2)
        font-weight: bold

        color: #38B9B9
        text-transform: uppercase

    // add
    .todo-add
        margin-top: .26rem

        input
            display: block
            width: 100%
            height .8rem
            line-height: .8rem

            padding: 0 .4rem
            border: 1px solid #999999

            font-size: .3rem

    // list
    .todo-list

        .list-box
            border-top: 1px dashed #f0f0f0

        li
            position relative
            padding: .2rem 0
            border-bottom: 1px dashed #f0f0f0
            cursor pointer

            input.is-hide,.list-title
                display: inline-block
                vertical-align: middle

            input.is-hide
                position relative
                text-align: center
                width: .6rem
                height: .6rem

                border: none

                appearance none

                &:before
                    display table
                    width 100%
                    height 100%

                    content: "✔"
                    font-size: .4rem
                    color: rgb(240, 240, 240)
                    text-shadow: rgb(191, 191, 191) 0px -1px 0px

                    ab-center()

                    cursor pointer
                    top 20%

                    transition: all .2s

                &[type=checkbox]:checked
                    &:before
                        color: #38B9B9
                        text-shadow: 0 1px 0 #669991

                    &+span
                        color #e4393c
                        text-decoration line-through

            .list-title
                font-size: .28rem
                margin-left .1rem
                transition color .3s
            // 刪除按鈕
            .delete-btn
                display: none
                width: .5rem
                height: .5rem
                line-height: .5rem
                font-size: .4rem

                color: #e4393c
                text-align: center

                position: absolute
                top: 25%
                right .2rem

                transition: all .2s

                &:hover
                    transform: scale(1.1)
                    text-shadow: 0 0 1px #000, 0 0 10px rgba(199, 107, 107, 0.8)

            &:hover
                .delete-btn
                    display: block

        // 路由
        .toggle-all-box
            position relative

            label,span
                display inline-block
                vertical-align middle

            .toggle-all
                position relative

                transform rotate(90deg)
                appearance none
                cursor pointer

                &:before
                    content: '»'
                    font-size: .6rem
                    color: #d9d9d9
                    text-shadow #bfbfbf 0px -1px 0px
                    padding: 0 5px

                &[type=checkbox]:checked
                    &:before
                        color: #38B9B9
                        text-shadow #669991 0px -1px 0px

        // 總數狀態
        .counts-status
            position relative
            padding .2rem 0

            label,span
                display inline-block
                vertical-align middle

            span 
                font-size: .2rem
                color: #8ac007

                &+span
                    margin-left: .3rem

            